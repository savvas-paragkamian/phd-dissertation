@article{farooq2020wege,
	author = {Farooq, Harith and Azevedo, Josu{\'e} and Belluardo, Francesco and Nanvonamuquitxo, Crist{\'o}v{\~a}o and Bennett, Dominic and Moat, Justin and Soares, Amadeu and Faurby, S{\o}ren and Antonelli, Alexandre},
	date = {2020-11-01},
	date-added = {2024-02-11 18:12:00 +0200},
