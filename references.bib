	journal = {Biological Conservation},
	keywords = {Conservation priorities, Ecosystem services, Extinction, Information shortfalls, Science funding, Species diversity},
	number = {11},
	pages = {2647-2655},
	title = {The seven impediments in invertebrate conservation and how to overcome them},
	url = {https://www.sciencedirect.com/science/article/pii/S0006320711002874},
	volume = {144},
	year = {2011},
