	journal = {Proceedings of the National Academy of Sciences},
	number = {33},
	pages = {13384-13389},
	title = {Species richness, hotspots, and the scale dependence of range maps in ecology and conservation},
	url = {https://www.pnas.org/doi/abs/10.1073/pnas.0704469104},
	volume = {104},
	year = {2007},
	bdsk-url-1 = {https://www.pnas.org/doi/abs/10.1073/pnas.0704469104},
