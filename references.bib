@article{Lenton2022resilience,
author = {Lenton, Timothy M.  and Buxton, Joshua E.  and Armstrong McKay, David I.  and Abrams, Jesse F.  and Boulton, Chris A.  and Lees, Kirsten  and Powell, Thomas W. R.  and Boers, Niklas  and Cunliffe, Andrew M.  and Dakos, Vasilis },
