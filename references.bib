	doi = {10.1093/database/bau125},
	issn = {1758-0463},
	journal = {Database},
	month = jan,
	pages = {bau125},
	title = {Fishing for data and sorting the catch: assessing the data quality, completeness and fitness for use of data in marine biogeographic databases},
	url = {https://doi.org/10.1093/database/bau125},
	urldate = {2022-03-20},
	volume = {2015},
	year = {2015},
	bdsk-url-1 = {https://doi.org/10.1093/database/bau125}}

