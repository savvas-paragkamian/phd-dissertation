	journal = {Insect Conservation and Diversity},
	keywords = {Endemics, latitudinal gradient, Pleistocene refugia, species--area relationship},
	number = {5},
	pages = {331-345},
	title = {Species richness and turnover patterns in European tenebrionid beetles},
