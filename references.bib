	doi = {10.1038/s41561-018-0236-z},
	id = {Antonelli2018},
	isbn = {1752-0908},
	journal = {Nature Geoscience},
	number = {10},
	pages = {718--725},
	title = {Geological and climatic influences on mountain biodiversity},
	url = {https://doi.org/10.1038/s41561-018-0236-z},
	volume = {11},
	year = {2018},
	bdsk-url-1 = {https://doi.org/10.1038/s41561-018-0236-z}}

