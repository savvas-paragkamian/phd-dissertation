@article{jurburg2022community,
  title = {The Community Ecology Perspective of Omics Data},
  author = {Jurburg, Stephanie D. and Buscot, François and Chatzinotas, Antonis and Chaudhari, Narendrakumar M. and Clark, Adam T. and Garbowski, Magda and Grenié, Matthias and Hom, Erik F. Y. and Karakoç, Canan and Marr, Susanne and Neumann, Steffen and Tarkka, Mika and family=Dam, given=Nicole M., prefix=van, useprefix=true and Weinhold, Alexander and Heintz-Buschart, Anna},
  date = {2022-12-13},
