	journal = {Organisms Diversity \& Evolution},
	number = {1},
	pages = {163--180},
	title = {Ecological patterns strongly impact the biogeography of western Palaearctic longhorn beetles (Coleoptera: Cerambycoidea)},
	url = {https://doi.org/10.1007/s13127-016-0290-6},
	volume = {17},
