	journal = {ZooKeys},
	keywords = {Taxonomy, Biodiversity Data, Carl Linnaeus, Charles Davies Sherborn, Global Names Index, Global Names Usage Bank, ZooBank Biodiversity Library},
	language = {eng},
	pages = {261--281},
	pmcid = {PMC4741226},
