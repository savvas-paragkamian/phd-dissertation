	journal = {Global Ecology and Conservation},
	keywords = {Extinction, Insularity, Biodiversity, Human impact, Threatened species, Urgent actions},
	pages = {e01847},
	title = {Scientists' warning -- The outstanding biodiversity of islands is in peril},
	url = {https://www.sciencedirect.com/science/article/pii/S2351989421003978},
	volume = {31},
