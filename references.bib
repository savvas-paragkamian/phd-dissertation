	doi = {https://doi.org/10.1016/j.biocon.2008.04.005},
	issn = {0006-3207},
	journal = {Biological Conservation},
	keywords = {Vulnerability, Natura 2000, Endemism, Effectiveness, Gap analysis, Conservation},
	number = {6},
	pages = {1612-1627},
	title = {Are the endemic water beetles of the Iberian Peninsula and the Balearic Islands effectively protected?},
	url = {https://www.sciencedirect.com/science/article/pii/S0006320708001341},
	volume = {141},
