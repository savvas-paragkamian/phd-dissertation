	journal = {Insect Conservation and Diversity},
	keywords = {Agricultural intensification, butterflies, insect decline, pesticides, semi-natural grasslands},
	number = {4},
	pages = {289-295},
	title = {Agricultural intensification drives butterfly decline},
	url = {https://resjournals.onlinelibrary.wiley.com/doi/abs/10.1111/icad.12343},
