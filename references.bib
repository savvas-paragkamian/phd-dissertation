	doi = {https://doi.org/10.1111/j.1365-2699.2006.01504.x},
	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.1365-2699.2006.01504.x},
	journal = {Journal of Biogeography},
	keywords = {Amplified fragment length polymorphism, anagenesis, cladogenesis, endemic plants, genetic differentiation, habitat heterogeneity, island biogeography, island evolution, speciation},
	number = {7},
	pages = {1259-1265},
	title = {Anagenetic evolution in island plants},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1365-2699.2006.01504.x},
